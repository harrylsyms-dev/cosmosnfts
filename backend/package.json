{
  "name": "cosmonfts-backend",
  "version": "1.0.0",
  "description": "CosmoNFT Backend API - NFT marketplace for celestial objects",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "npx prisma generate && npx prisma db push --accept-data-loss && tsc",
    "postbuild": "echo 'Build complete. Run npm run seed to populate NFT data if needed.'",
    "start": "node dist/app.js",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:mumbai": "npx hardhat run scripts/deploy.ts --network mumbai",
    "deploy:polygon": "npx hardhat run scripts/deploy.ts --network polygon",
    "seed": "ts-node prisma/seed.ts",
    "create-admin": "ts-node scripts/createAdmin.ts",
    "generate:images": "ts-node scripts/generateImages.ts",
    "generate:phase1": "ts-node scripts/generateImages.ts",
    "finalize:auctions": "ts-node scripts/finalizeAuctions.ts",
    "migrate": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "stripe": "^14.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "hardhat": "^2.19.4",
    "prisma": "^5.8.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
