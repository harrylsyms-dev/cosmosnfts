# CosmoNFT Backend - Production Environment Variables
# Copy this to .env for production deployment

# ======================
# DATABASE
# ======================
DATABASE_URL="postgresql://user:password@host:5432/cosmonfts?schema=public"

# ======================
# STRIPE (Live Keys)
# ======================
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY

# ======================
# BLOCKCHAIN
# ======================
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
PRIVATE_KEY=YOUR_DEPLOYER_PRIVATE_KEY
CONTRACT_ADDRESS=0xYOUR_DEPLOYED_CONTRACT_ADDRESS
TPS_ADDRESS=0xTHE_PLANETARY_SOCIETY_WALLET

# ======================
# POLYGONSCAN (Verification)
# ======================
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY

# ======================
# EMAIL (SendGrid)
# ======================
SENDGRID_API_KEY=SG.YOUR_SENDGRID_API_KEY
FROM_EMAIL=noreply@cosmonfts.com
SUPPORT_EMAIL=support@cosmonfts.com

# ======================
# APPLICATION
# ======================
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://cosmonfts.com

# ======================
# LOGGING
# ======================
LOG_LEVEL=info
